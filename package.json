{
  "name": "auto-update-test",
  "version": "1.0.13",
  "description": "Auto updater test",
  "main": "main.js",
  "scripts": {
    "launch": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "set GH_TOKEN=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 && electron-builder --win --publish always"
  },
  "build": {
    "appId": "autoupdate.interhaptics",
    "productName": "Auto updater",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish":[
        "github"
      ],
      "nsis": {
        "artifactName": "${productName}-Setup-${version}.${ext}",
        "oneClick": true,
        "perMachine": false,
        "allowToChangeInstallationDirectory": false,
        "runAfterFinish": true,
        "deleteAppDataOnUninstall": true
      }
    },
    "directories": {
      "output": "electron-build",
      "buildResources": "build-assets"
    },
    "publish": {
      "provider": "github",
      "host": "github.com",
      "releaseType": "release",
      "owner":"TLRazer",
      "repo":"auto-update-test",
      "private": false,
      "token": "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"
    }
  },
  "author": "ThomasL",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron": "^24.0.0"
  },
  "dependencies": {
    "electron-log": "^5.0.0-beta.22",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^5.3.0",
    "update-electron-app": "^2.0.1"
  }
}
